<!--Alaska-->
<includes>
	<include name="PosterMediaFlagsVars">
		<posy>0</posy>
		<height>36</height>
		<align>center</align>
		<aligny>center</aligny>
		<colordiffuse>FlagDiffuse</colordiffuse>
	</include>
	<include name="PosterMediaFlagsVarsCodec">
		<posx>56</posx>
		<width>60</width>
		<height>36</height>
		<align>center</align>
		<aligny>center</aligny>
		<colordiffuse>CodecDiffuse</colordiffuse>
	</include>
	<include name="PosterMediaFlagsVarsStudio">
		<posy>0</posy>
		<height>36</height>
		<align>center</align>
		<aligny>center</aligny>
		<colordiffuse>StudioDiffuse</colordiffuse>
	</include>
	<include name="PosterMediaFlags">
		<control type="group">
			<include>Animation_SlideUpFadeOut</include>
			<include>Animation_HiddenByInfo</include>
			<posx>494</posx>
			<posy>632</posy>
			<width>418</width>
			<animation effect="slide" start="0,0" end="0,30" time="200" condition="!system.getbool(lookandfeel.enablerssfeeds) | Skin.HasSetting(RSS_only_on_home) + !Window.IsActive(home) + !Window.IsVisible(2006)">Conditional</animation>

			<!-- Studio Panel -->
			<control type="group">
				<posx>664</posx>
				<posy>-29</posy>
				<control type="image">
					<width>92</width>
					<height>63</height>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/frame_studio.png</texture>
				<visible>Container.Content(tvshows) | Container.Content(movies) | Container.Content(episodes)</visible>
				</control>
				<control type="image" id="3500">
					<posx>2</posx>
					<posy>2</posy>
					<width>88</width>
					<height>59</height>
					<include>PosterMediaFlagsVarsStudio</include>
					<texture fallback="empty">$INFO[ListItem.Property(mediaTag::Studio)]</texture>
					<aspectratio>keep</aspectratio>
				</control>
			</control>

			<!-- Year Panel -->
			<control type="group">
				<posx>585</posx>
				<visible>!Skin.HasSetting(noyearpanel)</visible>
				<control type="image">
					<width>72</width>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/frame_year.png</texture>
					<visible>!IsEmpty(ListItem.Year)</visible>
				</control>
				<control type="label">
					<label>$INFO[ListItem.Year]</label>
					<posx>8</posx>
					<posy>-1</posy>
					<width>56</width>
					<include>PosterMediaFlagsVars</include>
					<font>Font_Flags_Large</font>
					<textcolor>FlagText</textcolor>
					<visible>!IsEmpty(ListItem.Year)</visible>
				</control>
			</control>
		
			<control type="group">

			<animation effect="slide" start="0,0" end="78,0" time="200" condition="IsEmpty(ListItem.Year)">Conditional</animation>				

			<!-- Rating Panel -->
			<control type="group" id="600">
				<posx>491</posx>
				<visible>!Skin.HasSetting(noratingpanel)</visible>
				<control type="image" id="601">
					<width>88</width>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/frame_imdb.png</texture>
					<visible>!IsEmpty(ListItem.Rating)</visible>
				</control>
				<control type="label" id="602">
					<label>$INFO[ListItem.Rating]</label>
					<posx>29</posx>
					<posy>-1</posy>
					<width>56</width>
					<include>PosterMediaFlagsVars</include>
					<font>Font_Flags_Large</font>
					<textcolor>FlagText</textcolor>
					<visible>!IsEmpty(ListItem.Rating)</visible>
				</control>
			</control>

			<!-- Audio Panel -->
			<control type="group">
				<posx>383</posx>

				<control type="image">
					<colordiffuse>FlagDiffuse</colordiffuse>
					<width>102</width>
					<height>36</height>
					<texture>flags/frame_audio.png</texture>
					<visible>Container.Content(movies) | Container.Content(episodes)</visible>
				</control>
				<control type="image">
					<posx>70</posx>
					<height>16</height>
					<width>26</width>
					<posy>10</posy>
					<align>center</align>
					<aligny>center</aligny>							<texture>$INFO[ListItem.Property(mediaTag::audioChannels)]</texture>
					<colordiffuse>88ffffff</colordiffuse>							
				</control>
				<control type="image">
					<colordiffuse>FlagDiffuse</colordiffuse>
					<posx>6</posx>
					<posy>8</posy>
					<width>55</width>
					<height>20</height>
					<texture>$INFO[ListItem.Property(mediaTag::audioCodec)]</texture>
					<aspectratio>keep</aspectratio>
				</control>
				
			</control>
			<!-- Video Panel -->
			<control type="group">
				<posx>150</posx>
				<visible>!Skin.HasSetting(novideopanel)</visible>
				<control type="image">
					<posx>-3</posx>
					<width>71</width>
					<height>36</height>
					<include>PosterMediaFlagsVars</include>
					<texture>$INFO[ListItem.Property(mediaTag::videoResolution)]</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="image">
					<posx>77</posx>
					<width>71</width>
					<height>36</height>
					<include>PosterMediaFlagsVars</include>
					<texture>$INFO[ListItem.Property(mediaTag::aspectRatio)]</texture>
					<aspectratio>stretch</aspectratio>
				</control>

			<!-- Video Codec Panel -->

				<control type="group">
					<posx>155</posx>

				<control type="image">
					<width>72</width>
					<include>PosterMediaFlagsVars</include>
					<texture>flags/frame_year.png</texture>
					<visible>Container.Content(movies) | Container.Content(episodes)</visible>
				</control>
				<control type="image">
				<posx>0</posx>
				<width>70</width>
				<height>36</height>
					<include>PosterMediaFlagsVarsCodec</include>
					<texture>$INFO[Listitem.Property(mediaTag::videoCodec)]</texture>
				<aspectratio>keep</aspectratio>
				</control>
			</control>

			</control>

			</control>
		
		</control>
	</include>
</includes>